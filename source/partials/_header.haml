-# ---------------------------------------------------------
-# The navigation 
-# ---------------------------------------------------------

.contain-to-grid
  %nav.top-bar{"data-topbar" => ""}
    %ul.title-area
      %li.name
        %h1   
          %a{:href => "/"}= t("header.home")
      %li.toggle-topbar.menu-icon
        %a{:href => "#"}= t("header.home")
              
    %section.top-bar-section
      %ul.left
        %li{:class => ('active' if @work)}
          %a{:href => "/work.html"}= t("header.work")
        %li{:class => ('active' if @about)}
          %a{:href => "/about.html"}= t("header.about")
        %li{:class => ('active' if @blog)}
          = link_to t("header.blog"), blog.articles.first.url
        %li{:class => ('active' if @contact)}
          %a{:href => "/contact.html"}= t("header.contact")
        
-# ---------------------------------------------------------
-# The HEADLINE 
-# ---------------------------------------------------------

.layout--full
  .layout--full-box
    .header--headline
      = t("header.header")
    .header--subheadline
      = t("header.sub_header")